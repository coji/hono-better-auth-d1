{
  "name": "hono-better-auth-d1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "typegen": "wrangler types",
    "lint": "biome lint .",
    "format": "prettier --check .",
    "typecheck": "tsc",
    "validate": "run-p format lint && run-p typecheck",
    "auth:generate": "pnpm dlx @better-auth/cli generate --config scripts/auth.migration-dummy.ts --output src/db/schema-better-auth.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply journal-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply journal-db"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "2.2.2",
    "better-auth": "1.2.8",
    "drizzle-orm": "0.44.1",
    "hono": "4.7.10"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.15.29",
    "drizzle-kit": "0.31.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.12",
    "typescript": "5.8.3",
    "wrangler": "4.18.0"
  }
}
